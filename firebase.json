{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/article/:id",
        "destination": "/#/article/:id",
        "type": 301
      },
      {
        "source": "/article",
        "destination": "/#/article",
        "type": 301
      }
    ]
  }
}
